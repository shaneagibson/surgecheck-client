<div class="menu-icon-container">
    <i class="touch-color icon-menu"></i>
</div>
<div class="place-details">
  <div class="place" data-id="{{id}}">
    <div class="name">{{name}}</div>
    <div class="description">{{description}}</div>
    <div class="rating">
      <div class="stars">
        <i class="icon-star star one"></i>
        <i class="icon-star star two"></i>
        <i class="icon-star star three"></i>
        <i class="icon-star star four"></i>
        <i class="icon-star star five"></i>
      </div>
    </div>
    <div class="images">
      {{#each images}}
          <div class="image touch-size" style="background-image: url({{.}})"></div>
      {{/each}}
    </div>
    <div class="small-description">{{address.line1}}</div>
    <div class="small-description">{{address.line2}}</div>
    <div class="small-description">{{address.line3}}</div>
  </div>
</div>