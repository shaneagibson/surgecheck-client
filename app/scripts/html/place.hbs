<div class="menu-icon-container">
    <i class="touch-color icon-menu"></i>
</div>
<div class="place-details">
  <div class="place" data-id="{{id}}">
    <div class="name">{{name}}</div>
    <div class="description">{{description}}</div>
    <div class="rating">
      <div class="stars">
        {{rating-stars rating}}
      </div>
    </div>
    <div class="images">
      {{#each images}}
        <a href="{{.}}" class="imagelightbox">
          <img src="{{.}}" class="image touch-size">
        </a>
      {{/each}}
    </div>
    <div class="small-description">{{address.line1}}</div>
    <div class="small-description">{{address.line2}}</div>
    <div class="small-description">{{address.line3}}</div>
  </div>
</div>
<div class="buttons single">
    <div class="button bold touch-color dark-button done">Done</div>
</div>